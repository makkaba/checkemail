
<div class="container" style="margin-top:20px;">
  <div class="row" style="text-align:center;">
    <%= image_tag("news.png")%>
  </div>
  <div class="row">
    
    <div class="col m3">
        <h5>시도한 이메일</h5>
        <ul class="confirm_list">
          <%@emails.each do |email|%>
          <li><%= email.email %></li>
          <% end %>
        </ul>
      </div>
      <div class="col s12 m6">
        <div class="card">
          <div class="section_email">
            <div class="card-content">
              <div class="row">
                <div class="input-field col s12">
                  <input name="user_email" id="user_email" type="email" class="validate">
                  <label for="user_email">이메일</label>
                </div>
              </div>
            </div>
            <div class="card-action right-align">
              <button class="btn waves-effect waves-light" type="button" id="send_verify">전송</button>  
            </div>
            
          </div>
          <div class="section_code">
            <div class="card-content">
              <div class="row">
                <div class="input-field col s12">
                  <input name="user_code" id="user_code" type="text" class="validate">
                  <label for="user_code">인증코드</label>
                </div>
              </div>
            </div>
            <div class="card-action right-align">
              <button class="btn waves-effect waves-light" type="button" id="process_verify">인증</button>  
            </div>
          </div>
          <div class="center-align preloader">
              <div class="preloader-wrapper small">
                <div class="spinner-layer spinner-green-only">
                  <div class="circle-clipper left">
                    <div class="circle"></div>
                  </div><div class="gap-patch">
                    <div class="circle"></div>
                  </div><div class="circle-clipper right">
                    <div class="circle"></div>
                  </div>
                </div>
              </div>
            </div>
        </div>
      </div>
      <div class="col m3">
        <h5>인증된 이메일</h5>
        <ul class="confirm_list">
          <%@confirm_emails.each do |email|%>
          <li><%= email.email %></li>
          <% end %>
        </ul>
      </div>
      
      
      
    </div>
  </div>

  
</div>
